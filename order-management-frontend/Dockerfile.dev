# Dockerfile simple para desarrollo rápido
FROM node:20-alpine

WORKDIR /app

# Instalar dependencias
COPY package*.json ./
RUN npm ci

# Copiar código fuente
COPY . .

# Exponer puerto
EXPOSE 5173

# Variables de entorno para conectar con backend
ENV VITE_API_BASE_URL=http://localhost:5001
ENV VITE_ORDER_SERVICE_URL=http://order-service:5001
ENV VITE_PRODUCT_SERVICE_URL=http://product-service:5002
ENV VITE_CUSTOMER_SERVICE_URL=http://customer-service:5003
ENV VITE_LOGGING_SERVICE_URL=http://logging-service:5004

# Comando para desarrollo
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
