{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=OrderManagement_Orders;Trusted_Connection=true;TrustServerCertificate=true;"
  },
  "Jwt": {
    "Key": "OrderManagement-JWT-Secret-Key-2025-Super-Secure-At-Least-256-Bits-Long",
    "Issuer": "OrderManagementSystem",
    "Audience": "OrderManagementSystem",
    "ExpireMinutes": 60
  },
  "ExternalServices": {
    "ProductService": {
      "BaseUrl": "http://localhost:5002"
    },
    "CustomerService": {
      "BaseUrl": "http://localhost:5003"
    },
    "LoggingService": {
      "BaseUrl": "http://localhost:5004"
    }
  },
  "RabbitMQ": {
    "HostName": "localhost",
    "UserName": "guest",
    "Password": "guest",
    "Port": 5672,
    "VirtualHost": "/",
    "Exchange": "order_management_exchange"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/orderservice-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 10
        }
      }
    ]
  }
}
